{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strict": true,
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "dist",
    },
    "include": [
        "scripts/**/*"
    ]
}
